<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/сv_pattern_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="12dp"
        android:elevation="18dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_pattern_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/bull_patterns" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_pattern_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textAppearance="@style/toolbar_title_style"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/сv_pattern_image"
        app:layout_constraintStart_toEndOf="@+id/сv_pattern_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Uchta oq soldat" />

    <TextView
        android:id="@+id/tv_pattern_en_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/сv_pattern_image"
        app:layout_constraintStart_toStartOf="@+id/tv_pattern_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_pattern_name"
        tools:text="Uchta oq soldat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/сv_pattern_image" />

</androidx.constraintlayout.widget.ConstraintLayout>